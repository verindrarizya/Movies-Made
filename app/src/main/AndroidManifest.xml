<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.verindrarizya.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movies">
        <activity android:name="com.verindrarizya.movies.ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.verindrarizya.movies.ui.detailmovie.MovieDetailActivity"
            android:theme="@style/Theme.Movies.NoActionBar" />
        <activity android:name="com.verindrarizya.movies.ui.listmovie.MovieActivity"/>
    </application>

</manifest>